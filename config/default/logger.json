{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "standard": {
            "style": "{",
            "format": "{asctime} [{levelname}] {name}: {message}"
        },
        "simple": {
            "style": "%",
            "class": "src.util.ColoredFormatter"
        },
        "full": {
            "style": "{",
            "format": "[{asctime}][{levelname:^8}] {filename}:{lineno}: {funcName}: {message}"
        }
    },
    "handlers": {
        "default": {
            "level": "ERROR",
            "formatter": "standard",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "stdout": {
            "level": "NOTSET",
            "formatter": "simple",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "level": "WARNING",
            "formatter": "simple",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stderr"
        },
        "log_file": {
            "level": "DEBUG",
            "formatter": "full",
            "class": "logging.FileHandler",
            "filename": "logs/latest.log",
            "encoding": "utf-8",
            "mode": "w"
        },
        "rotating_log_file": {
            "level": "NOTSET",
            "formatter": "full",
            "class": "logging.handlers.RotatingFileHandler",
            "filename": "logs/log.log",
            "mode": "a",
            "encoding": "utf-8",
            "maxBytes": 1048576,
            "backupCount": 5
        }
    },
    "loggers": {
        "root": {
            "handlers": [],
            "level": "WARNING",
            "propagate": false
        },
        "assembler": {
            "handlers": [
                "stdout",
                "log_file"
            ],
            "level": "NOTSET",
            "propagate": false
        }
    }
}